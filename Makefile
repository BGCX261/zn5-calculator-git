####### Compile

.obj/Data.o: Data.cpp \
		Data.h
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o .obj/Data.o Data.cpp

.obj/mZWidget.o: mZWidget.cpp \
		mZWidget.h \
		debug.h \
		Data.h \
		key.h
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o .obj/mZWidget.o mZWidget.cpp

.obj/main.o: main.cpp \
		mZWidget.h \
		debug.h \
		Data.h \
		key.h
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o .obj/main.o main.cpp

install: $(TARGET)
	sudo cp $(TARGET) $(TFCARD)/mpkgbox/zn5Cal
